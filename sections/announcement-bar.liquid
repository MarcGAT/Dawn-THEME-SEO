<style>
  :root{
    --ps-bg:{{ section.settings.background_color | default: '#1e3a8a' }};
    --ps-fg:{{ section.settings.text_color | default: '#ffffff' }};
    --ps-size:{{ section.settings.font_size | default: '16' }}px;
    --ps-speed:{{ section.settings.scroll_speed | default: '30' }}s;
    --ps-gap:{{ section.settings.item_gap | default: '18' }}rem;
    --ps-pad:{{ section.settings.vertical_padding | default: '14' }}px;
    --ps-gradient:{{ section.settings.gradient_enabled | default: false }};
    --ps-gradient-start:{{ section.settings.gradient_start | default: '#1e3a8a' }};
    --ps-gradient-end:{{ section.settings.gradient_end | default: '#3b82f6' }};
    --ps-shadow:{{ section.settings.enable_shadow | default: false }};
    --ps-glow:{{ section.settings.enable_glow | default: false }};
    --ps-emoji-size:{{ section.settings.emoji_size | default: '1.2' }};
    --ps-bounce:{{ section.settings.enable_bounce | default: false }};
  }

  .ps-onebar{
    {% if section.settings.gradient_enabled %}background: linear-gradient(90deg, var(--ps-gradient-start), var(--ps-gradient-end));{% else %}background: var(--ps-bg);{% endif %}
    color: var(--ps-fg);
    border: none;
    overflow: hidden;
    font-weight: 700;
    font-size: var(--ps-size);
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    position: relative;
    z-index: 10;
    box-sizing: border-box;
    {% if section.settings.enable_shadow %}box-shadow: 0 4px 15px rgba(0,0,0,0.2);{% endif %}
  }

  .ps-track{
    display: flex;
    gap: var(--ps-gap);
    white-space: nowrap;
    animation: ps-marquee var(--ps-speed) linear infinite;
    will-change: transform;
    padding: var(--ps-pad) 20px;
    min-width: 200vw;
    box-sizing: border-box;
  }

  .ps-item{
    display: flex;
    align-items: center;
    flex-shrink: 0;
    position: relative;
  }

  .ps-item a{
    color: inherit;
    text-decoration: underline;
    transition: all 0.3s ease;
  }

  .ps-item a:hover{
    text-decoration: none;
    opacity: 0.8;
    {% if section.settings.enable_glow %}text-shadow: 0 0 10px currentColor;{% endif %}
    transform: scale(1.05);
  }

  /* Emoji-Styling */
  .ps-item .emoji{
    font-size: calc(var(--ps-size) * var(--ps-emoji-size));
    margin-right: 0.3em;
    display: inline-block;
    {% if section.settings.enable_bounce %}animation: ps-bounce 2s ease-in-out infinite;{% endif %}
  }

  /* Bounce-Animation für Emojis */
  @keyframes ps-bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-3px); }
    60% { transform: translateY(-2px); }
  }

  /* Marquee-Animation mit verschiedenen Richtungen */
  @keyframes ps-marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  @keyframes ps-marquee-reverse {
    from { transform: translateX(-50%); }
    to { transform: translateX(0); }
  }

  /* Richtung umkehren wenn gewünscht */
  {% if section.settings.reverse_direction %}
  .ps-track { animation: ps-marquee-reverse var(--ps-speed) linear infinite; }
  {% endif %}

  @media(max-width:640px){
    :root{
      --ps-size:{{ section.settings.mobile_font_size | default: '14' }}px;
      --ps-gap:{{ section.settings.mobile_item_gap | default: '10' }}rem;
      --ps-emoji-size:{{ section.settings.mobile_emoji_size | default: '1.1' }};
    }
  }

  /* Pause bei Hover mit sanfter Verlangsamung */
  .ps-track:hover{
    animation-play-state: paused;
    transition: all 0.3s ease;
  }

  /* Glow-Effekt für Text */
  {% if section.settings.enable_glow %}
  .ps-item {
    text-shadow: 0 0 5px rgba(255,255,255,0.3);
  }
  {% endif %}

  /* Bessere Barrierefreiheit */
  @media (prefers-reduced-motion: reduce) {
    .ps-track{animation:none}
    .ps-item .emoji{animation:none}
  }

  /* Sicherstellen, dass die Leiste über allem liegt */
  .utility-bar{position:relative;z-index:5}

  /* Verhindern von horizontalen Scrollbalken */
  body{overflow-x:hidden}

  /* Entfernen von störenden Rändern beim Marquee-Style */
  .ps-onebar + .utility-bar{
    border-top:none !important;
    margin-top:0 !important;
    padding-top:0 !important;
  }

  /* Sicherstellen, dass keine unerwünschten Abstände entstehen */
  .ps-onebar{
    margin-bottom:0 !important;
    padding-bottom:0 !important;
  }

  /* Sicherstellen, dass die Ankündigungsleiste korrekt positioniert ist */
  @media screen and (max-width: 749px) {
    .ps-onebar{margin-left:calc(-50vw + 50%);width:100vw}
  }

  /* Spezielle Styling-Optionen für verschiedene Text-Stile */
  .ps-item.highlight {
    background: rgba(255,255,255,0.2);
    padding: 2px 8px;
    border-radius: 4px;
    backdrop-filter: blur(10px);
  }

  .ps-item.bold {
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Pulse-Effekt für wichtige Ankündigungen */
  .ps-item.pulse {
    animation: ps-pulse 2s ease-in-out infinite;
  }

  @keyframes ps-pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
  }
</style>

